{
  "manifest_version": 3,
  "name": "Smart Note-Taker",
  "version": "1.0",
  "description": "Highlight text on any webpage and save it as a note with one right-click.",
  "permissions": [
    "contextMenus",
    "storage",
    "sidePanel",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
